# ============================================
# Configuración AWS para NGINX RTMP/HLS Server
# ============================================

# Región AWS
AWS_REGION="us-east-1"

# EC2 Configuration
EC2_INSTANCE_TYPE="t3.medium"
EC2_AMI_ID="ami-0c55b159cbfafe1f0"  # Amazon Linux 2023 (actualizar según región)
EC2_KEY_NAME="nginx-rtmp-key"
EC2_INSTANCE_NAME="nginx-rtmp-server"

# Security Group
SECURITY_GROUP_NAME="nginx-rtmp-sg"
SECURITY_GROUP_DESC="Security group for NGINX RTMP/HLS streaming server"

# Puertos a abrir
# 1935: RTMP input
# 8080: HTTP for HLS + stats
# 22: SSH
PORTS_TCP="22 1935 8080"

# CloudFront Configuration
CLOUDFRONT_PRICE_CLASS="PriceClass_100"  # USA, Canada, Europe
CLOUDFRONT_COMMENT="NGINX RTMP/HLS CDN"

# NGINX/RTMP Configuration
RTMP_STREAM_NAMES="live,testing"
RTMP_CONNECTIONS="1024"

# Docker Image
DOCKER_IMAGE="alcarazolabs/nginx-rtmp-hls:latest"

# Tags
TAG_PROJECT="nginx-rtmp-streaming"
TAG_ENVIRONMENT="production"
